/* pages/detail/detail.wxss */
.container {
  padding: 0;
}

.detail-header {
  padding: 80rpx 40rpx 60rpx;
  text-align: center;
  color: white;
}

.header-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
}

.header-title {
  font-size: 44rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.header-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

.detail-content {
  padding: 40rpx;
}

.intro-text {
  font-size: 30rpx;
  line-height: 1.8;
  color: #666;
  margin-bottom: 40rpx;
  padding: 30rpx;
  background: #F8F9FA;
  border-radius: 16rpx;
}

.steps-container {
  margin-bottom: 40rpx;
}

.step-item {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.step-number {
  display: inline-block;
  padding: 8rpx 20rpx;
  background: #F3F4F6;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.step-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.step-description {
  font-size: 28rpx;
  line-height: 1.8;
  color: #666;
  white-space: pre-line;
}

.step-content {
  margin-top: 30rpx;
}

/* 两栏清单 */
.two-column-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.column {
  background: #F8F9FA;
  padding: 24rpx;
  border-radius: 12rpx;
}

.column-title {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.column-input {
  width: 100%;
  min-height: 200rpx;
  font-size: 26rpx;
  background: white;
  border-radius: 8rpx;
  padding: 16rpx;
}

/* 问题列表 */
.question-list {
  margin-top: 20rpx;
}

.question-item {
  display: flex;
  align-items: flex-start;
  padding: 20rpx;
  background: #F8F9FA;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.question-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.question-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 风险阶梯 */
.risk-ladder {
  position: relative;
  padding: 20rpx 0;
}

.risk-level {
  padding: 24rpx;
  margin-bottom: 12rpx;
  border-radius: 12rpx;
  text-align: center;
}

.risk-high {
  background: #FFE5E5;
  border-left: 6rpx solid #EF4444;
}

.risk-medium {
  background: #FFF9E5;
  border-left: 6rpx solid #F59E0B;
}

.risk-low {
  background: #E5F9F0;
  border-left: 6rpx solid #10B981;
}

.risk-label {
  font-size: 28rpx;
  color: #333;
}

.risk-indicator {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  margin-top: 16rpx;
}

/* 流程图 */
.flow-chart {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 20rpx;
  background: #F8F9FA;
  border-radius: 12rpx;
}

.flow-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.flow-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.flow-label {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

.flow-arrow {
  font-size: 32rpx;
  color: #999;
  margin: 0 16rpx;
}

.action-button {
  margin-top: 40rpx;
}
