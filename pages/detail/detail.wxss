/* pages/detail/detail.wxss */
.container {
  padding: 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

.detail-header {
  padding: 100rpx 40rpx 80rpx;
  text-align: center;
  color: white;
  position: relative;
  animation: fadeIn 0.6s ease-out;
}

.detail-header::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 500rpx;
  height: 500rpx;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
  border-radius: 50%;
}

.header-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  filter: drop-shadow(0 8rpx 16rpx rgba(0, 0, 0, 0.2));
  animation: floating 3s ease-in-out infinite;
  position: relative;
  z-index: 1;
}

.header-title {
  font-size: 48rpx;
  font-weight: 800;
  margin-bottom: 20rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  letter-spacing: -0.5rpx;
  position: relative;
  z-index: 1;
}

.header-subtitle {
  font-size: 28rpx;
  opacity: 0.95;
  font-weight: 500;
  position: relative;
  z-index: 1;
}

.detail-content {
  padding: 40rpx;
  background: #f8f9fb;
  border-radius: 40rpx 40rpx 0 0;
  margin-top: -20rpx;
  position: relative;
  animation: slideUp 0.6s ease-out 0.2s both;
}

.intro-text {
  font-size: 28rpx;
  line-height: 1.9;
  color: #475569;
  margin-bottom: 48rpx;
  padding: 36rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
  border-left: 4rpx solid #667eea;
}

.steps-container {
  margin-bottom: 48rpx;
}

.step-item {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 28rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
  border: 2rpx solid rgba(102, 126, 234, 0.1);
  transition: all 0.3s ease;
  animation: fadeIn 0.5s ease-out both;
}

.step-item:nth-child(1) {
  animation-delay: 0.3s;
}

.step-item:nth-child(2) {
  animation-delay: 0.4s;
}

.step-item:nth-child(3) {
  animation-delay: 0.5s;
}

.step-item:active {
  transform: scale(0.98);
}

.step-number {
  display: inline-block;
  padding: 10rpx 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 24rpx;
  font-size: 22rpx;
  color: white;
  margin-bottom: 20rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.step-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #1a202c;
  margin-bottom: 24rpx;
  letter-spacing: -0.5rpx;
}

.step-description {
  font-size: 28rpx;
  line-height: 1.9;
  color: #64748b;
  white-space: pre-line;
}

.step-content {
  margin-top: 32rpx;
}

/* 两栏清单 */
.two-column-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.column {
  background: linear-gradient(135deg, #f6f8fb 0%, #ffffff 100%);
  padding: 28rpx;
  border-radius: 16rpx;
  border: 1rpx solid rgba(102, 126, 234, 0.1);
}

.column-title {
  font-size: 24rpx;
  color: #94a3b8;
  margin-bottom: 16rpx;
  font-weight: 600;
}

.column-input {
  width: 100%;
  min-height: 200rpx;
  font-size: 26rpx;
  background: white;
  border-radius: 12rpx;
  padding: 20rpx;
  border: 1rpx solid #e2e8f0;
}

/* 问题列表 */
.question-list {
  margin-top: 24rpx;
}

.question-item {
  display: flex;
  align-items: flex-start;
  padding: 24rpx;
  background: linear-gradient(135deg, #f6f8fb 0%, #ffffff 100%);
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  border-left: 4rpx solid #667eea;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
}

.question-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
}

.question-text {
  font-size: 26rpx;
  color: #475569;
  line-height: 1.7;
  font-weight: 500;
}

/* 风险阶梯 */
.risk-ladder {
  position: relative;
  padding: 24rpx 0;
}

.risk-level {
  padding: 28rpx;
  margin-bottom: 16rpx;
  border-radius: 16rpx;
  text-align: center;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
}

.risk-high {
  background: linear-gradient(135deg, #fee2e2 0%, #ffffff 100%);
  border-left: 6rpx solid #EF4444;
}

.risk-medium {
  background: linear-gradient(135deg, #fef3c7 0%, #ffffff 100%);
  border-left: 6rpx solid #F59E0B;
}

.risk-low {
  background: linear-gradient(135deg, #d1fae5 0%, #ffffff 100%);
  border-left: 6rpx solid #10B981;
}

.risk-label {
  font-size: 28rpx;
  color: #1a202c;
  font-weight: 600;
}

.risk-indicator {
  text-align: center;
  font-size: 24rpx;
  color: #94a3b8;
  margin-top: 20rpx;
  font-weight: 600;
}

/* 流程图 */
.flow-chart {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 36rpx 24rpx;
  background: linear-gradient(135deg, #f6f8fb 0%, #ffffff 100%);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
}

.flow-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.flow-icon {
  font-size: 52rpx;
  margin-bottom: 16rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.1));
}

.flow-label {
  font-size: 24rpx;
  color: #475569;
  text-align: center;
  font-weight: 600;
}

.flow-arrow {
  font-size: 36rpx;
  color: #94a3b8;
  margin: 0 20rpx;
  font-weight: 700;
}

.action-button {
  margin-top: 48rpx;
  animation: slideUp 0.6s ease-out 0.7s both;
}
