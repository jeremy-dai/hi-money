/* pages/analytics/analytics.wxss */
.container {
  min-height: 100vh;
  padding: 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding-bottom: 80rpx;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
  animation: fadeIn 0.6s ease-out;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.goal-card {
  background: white;
  border-radius: 28rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
  animation: slideUp 0.6s ease-out;
}

.goal-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.goal-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.goal-info {
  flex: 1;
}

.goal-name {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.goal-target {
  font-size: 26rpx;
  color: #999;
}

.progress-section {
  margin-bottom: 30rpx;
}

.progress-amount {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  margin-bottom: 20rpx;
}

.current {
  font-size: 48rpx;
  font-weight: bold;
  color: #667eea;
}

.remaining {
  font-size: 28rpx;
  color: #999;
}

.progress-bar {
  width: 100%;
  height: 20rpx;
  background: #f3f4f6;
  border-radius: 10rpx;
  overflow: hidden;
  margin-bottom: 12rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #10B981 0%, #059669 100%);
  border-radius: 10rpx;
  transition: width 0.3s;
}

.progress-text {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

.prediction-section {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 20rpx;
  padding-top: 24rpx;
  border-top: 2rpx solid #f3f4f6;
}

.prediction-item {
  text-align: center;
}

.prediction-label {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.prediction-value {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.tip {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx;
  background: #fef3c7;
  border-radius: 12rpx;
  margin-top: 20rpx;
}

.tip-icon {
  font-size: 28rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #92400e;
}

.chart-card {
  background: white;
  border-radius: 28rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
  animation: slideUp 0.6s ease-out 0.2s backwards;
}

.chart-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
}

.pie-chart {
  width: 300px;
  height: 300px;
  margin: 0 auto;
  display: block;
}

.legend {
  margin-top: 30rpx;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.legend-color {
  width: 32rpx;
  height: 32rpx;
  border-radius: 8rpx;
}

.legend-info {
  flex: 1;
}

.legend-name {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.legend-value {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.trend-chart {
  width: 350px;
  height: 200px;
  margin: 0 auto;
  display: block;
}

.chart-note {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  margin-top: 20rpx;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
