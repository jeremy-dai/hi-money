/* pages/accounts/accounts.wxss */
.container {
  min-height: 100vh;
  padding: 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding-bottom: 120rpx;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
  animation: fadeIn 0.6s ease-out;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.summary-card {
  background: white;
  border-radius: 28rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
  animation: slideUp 0.6s ease-out;
}

.summary-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.summary-label {
  font-size: 28rpx;
  color: #666;
}

.summary-amount {
  font-size: 42rpx;
  font-weight: bold;
  color: #667eea;
}

.summary-goal {
  font-size: 32rpx;
  font-weight: 500;
  color: #999;
}

.progress-bar {
  width: 100%;
  height: 16rpx;
  background: #f3f4f6;
  border-radius: 8rpx;
  margin-top: 20rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #10B981 0%, #059669 100%);
  border-radius: 8rpx;
  transition: width 0.3s;
}

.progress-text {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  margin-top: 12rpx;
}

.categories-section {
  animation: slideUp 0.6s ease-out 0.2s backwards;
}

.category-section {
  margin-bottom: 40rpx;
}

.category-header {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  border-left: 8rpx solid;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.08);
}

.category-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.category-info {
  flex: 1;
}

.category-name {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.category-target {
  font-size: 24rpx;
  color: #999;
}

.category-total {
  text-align: right;
}

.total-amount {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #667eea;
  margin-bottom: 4rpx;
}

.total-percentage {
  font-size: 24rpx;
  color: #999;
}

.accounts-list {
  margin-top: 20rpx;
}

.account-item {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx 30rpx;
  margin-bottom: 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.account-name {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.account-actions {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.account-amount {
  font-size: 30rpx;
  font-weight: 600;
  color: #667eea;
  padding: 8rpx 20rpx;
  background: #f3f4f6;
  border-radius: 12rpx;
}

.delete-btn {
  font-size: 24rpx;
  color: #ef4444;
  padding: 8rpx 16rpx;
}

.add-account-btn {
  background: rgba(255, 255, 255, 0.5);
  border: 2rpx dashed rgba(255, 255, 255, 0.8);
  border-radius: 16rpx;
  padding: 24rpx;
  text-align: center;
  color: white;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.add-icon {
  font-size: 32rpx;
  font-weight: bold;
}

.button-wrapper {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 40rpx;
  background: linear-gradient(180deg, transparent 0%, rgba(118, 75, 162, 0.8) 50%);
}

.complete-button {
  width: 100%;
  padding: 32rpx;
  background: linear-gradient(135deg, #10B981 0%, #059669 100%);
  color: white;
  font-size: 36rpx;
  font-weight: bold;
  border-radius: 28rpx;
  box-shadow: 0 20rpx 40rpx rgba(16, 185, 129, 0.3);
  border: none;
}

.complete-button:active {
  opacity: 0.9;
  transform: scale(0.98);
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
