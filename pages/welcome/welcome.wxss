/* pages/welcome/welcome.wxss */
.welcome-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 60rpx 40rpx;
}

.main-title {
  font-size: 56rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 30rpx;
}

.illustration {
  margin: 80rpx 0;
}

.icon {
  font-size: 180rpx;
}

.features {
  width: 100%;
  margin: 60rpx 0;
}

.feature-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: white;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
}

.feature-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
}

.feature-text {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.btn-primary {
  width: 100%;
  margin-top: 40rpx;
}
