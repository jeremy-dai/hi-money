/* pages/allocate-income/allocate-income.wxss */
.container {
  min-height: 100vh;
  padding: 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding-bottom: 160rpx;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
  animation: fadeIn 0.6s ease-out;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.status-card {
  background: white;
  border-radius: 28rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
  animation: slideUp 0.6s ease-out;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.total-assets {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  margin-bottom: 30rpx;
}

.total-assets .label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.total-assets .amount {
  font-size: 40rpx;
  font-weight: bold;
  color: white;
}

.status-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  margin-bottom: 24rpx;
}

.status-item {
  padding: 20rpx;
  background: #f9fafb;
  border-radius: 16rpx;
}

.status-name {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.status-value {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.current-percentage {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.target-percentage {
  font-size: 22rpx;
  color: #999;
}

.deviation {
  font-size: 24rpx;
  font-weight: 600;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  display: inline-block;
}

.deviation.deficit {
  background: #fee2e2;
  color: #dc2626;
}

.deviation.surplus {
  background: #d1fae5;
  color: #059669;
}

.tip {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx;
  background: #fef3c7;
  border-radius: 12rpx;
}

.tip-icon {
  font-size: 28rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #92400e;
}

.input-card {
  background: white;
  border-radius: 28rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
  animation: slideUp 0.6s ease-out 0.1s backwards;
}

.input-label {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

.income-input {
  width: 100%;
  padding: 24rpx;
  font-size: 48rpx;
  font-weight: bold;
  color: #667eea;
  text-align: center;
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  background: #f9fafb;
}

.plans-section {
  animation: slideUp 0.6s ease-out 0.2s backwards;
}

.plans-title {
  font-size: 32rpx;
  font-weight: 600;
  color: white;
  margin-bottom: 30rpx;
  text-align: center;
}

.plan-card {
  background: white;
  border-radius: 28rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
  border: 4rpx solid transparent;
  transition: all 0.3s;
}

.plan-card.selected {
  border-color: #10B981;
  box-shadow: 0 20rpx 60rpx rgba(16, 185, 129, 0.3);
}

.plan-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.plan-name {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.plan-icon {
  font-size: 36rpx;
}

.plan-tag {
  padding: 8rpx 20rpx;
  background: #dbeafe;
  color: #1e40af;
  font-size: 24rpx;
  border-radius: 20rpx;
  font-weight: 500;
}

.plan-tag.smart {
  background: #d1fae5;
  color: #059669;
}

.plan-description {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 24rpx;
}

.plan-details {
  border-top: 2rpx solid #f3f4f6;
  padding-top: 20rpx;
}

.plan-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
}

.plan-category {
  font-size: 28rpx;
  color: #666;
}

.plan-amount {
  font-size: 32rpx;
  font-weight: bold;
  color: #667eea;
}

.button-wrapper {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 40rpx;
  background: linear-gradient(180deg, transparent 0%, rgba(118, 75, 162, 0.8) 50%);
}

.confirm-button {
  width: 100%;
  padding: 32rpx;
  background: linear-gradient(135deg, #10B981 0%, #059669 100%);
  color: white;
  font-size: 36rpx;
  font-weight: bold;
  border-radius: 28rpx;
  box-shadow: 0 20rpx 40rpx rgba(16, 185, 129, 0.3);
  border: none;
}

.confirm-button:active {
  opacity: 0.9;
  transform: scale(0.98);
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
