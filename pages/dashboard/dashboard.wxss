/* pages/dashboard/dashboard.wxss */
.container {
  padding-bottom: 80rpx;
  background: transparent;
}

.settings-btn {
  position: fixed;
  top: 40rpx;
  right: 40rpx;
  width: 88rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 50%;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
  z-index: 100;
  transition: all 0.3s ease;
  border: 2rpx solid rgba(102, 126, 234, 0.1);
}

.settings-btn:active {
  transform: scale(0.92);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.settings-btn .icon {
  font-size: 44rpx;
}

.header {
  text-align: center;
  margin-bottom: 48rpx;
  padding-top: 20rpx;
  animation: fadeIn 0.6s ease-out;
}

.main-title {
  font-size: 52rpx;
  font-weight: 800;
  color: white;
  margin-bottom: 20rpx;
  letter-spacing: -0.5rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.success-msg {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
  padding: 12rpx 32rpx;
  background: rgba(16, 185, 129, 0.2);
  border-radius: 100rpx;
  display: inline-block;
  backdrop-filter: blur(10rpx);
}

.wealth-cards {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-bottom: 60rpx;
}

.wealth-card {
  background: white;
  border-radius: 28rpx;
  padding: 36rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  position: relative;
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  animation: slideUp 0.5s ease-out both;
  border: 2rpx solid transparent;
}

.wealth-card:nth-child(1) {
  animation-delay: 0.1s;
}

.wealth-card:nth-child(2) {
  animation-delay: 0.2s;
}

.wealth-card:nth-child(3) {
  animation-delay: 0.3s;
}

.wealth-card:nth-child(4) {
  animation-delay: 0.4s;
}

.wealth-card:active {
  transform: scale(0.97);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
}

.wealth-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 5rpx;
  opacity: 0.8;
}

.card-growth {
  background: linear-gradient(135deg, #D1FAE5 0%, #FFFFFF 100%);
  border-color: rgba(16, 185, 129, 0.15);
}

.card-growth::before {
  background: linear-gradient(90deg, #10B981, #059669);
}

.card-stability {
  background: linear-gradient(135deg, #DBEAFE 0%, #FFFFFF 100%);
  border-color: rgba(59, 130, 246, 0.15);
}

.card-stability::before {
  background: linear-gradient(90deg, #3B82F6, #2563EB);
}

.card-essentials {
  background: linear-gradient(135deg, #FEF3C7 0%, #FFFFFF 100%);
  border-color: rgba(245, 158, 11, 0.15);
}

.card-essentials::before {
  background: linear-gradient(90deg, #F59E0B, #D97706);
}

.card-rewards {
  background: linear-gradient(135deg, #FCE7F3 0%, #FFFFFF 100%);
  border-color: rgba(249, 168, 212, 0.15);
}

.card-rewards::before {
  background: linear-gradient(90deg, #F9A8D4, #F472B6);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 26rpx;
  color: #64748b;
  font-weight: 600;
  letter-spacing: 0.5rpx;
}

.card-icon {
  font-size: 40rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.1));
}

.card-percentage {
  font-size: 22rpx;
  color: #94a3b8;
  margin-bottom: 8rpx;
  font-weight: 600;
}

.card-amount {
  font-size: 44rpx;
  font-weight: 800;
  color: #1a202c;
  margin-bottom: 12rpx;
  letter-spacing: -0.5rpx;
}

.card-subtitle {
  font-size: 22rpx;
  color: #64748b;
  text-align: center;
  font-weight: 500;
  padding: 8rpx 12rpx;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 8rpx;
}

.chart-section {
  background: white;
  border-radius: 28rpx;
  padding: 48rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  position: relative;
  overflow: hidden;
  animation: slideUp 0.6s ease-out 0.5s both;
}

.chart-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #667eea, #764ba2, #f093fb, #f5576c);
}

.section-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #1a202c;
  margin-bottom: 16rpx;
  text-align: center;
  letter-spacing: -0.5rpx;
}

.chart-subtitle {
  font-size: 24rpx;
  color: #94a3b8;
  text-align: center;
  margin-bottom: 48rpx;
  line-height: 1.6;
}

.chart-legend {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 28rpx;
  margin-bottom: 48rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx;
  background: linear-gradient(135deg, #f6f8fb 0%, #ffffff 100%);
  border-radius: 20rpx;
  border: 1rpx solid rgba(102, 126, 234, 0.1);
}

.legend-color {
  width: 28rpx;
  height: 28rpx;
  border-radius: 6rpx;
  margin-right: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.legend-text {
  font-size: 24rpx;
  color: #1a202c;
  font-weight: 600;
}

.chart-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
}

.pie-chart {
  width: 300px;
  height: 300px;
  filter: drop-shadow(0 8rpx 16rpx rgba(0, 0, 0, 0.08));
}

/* 新增：目标进度卡片样式 */
.goal-progress-card {
  background: white;
  border-radius: 28rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  animation: slideUp 0.5s ease-out;
}

.goal-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 30rpx;
}

.goal-icon {
  font-size: 40rpx;
}

.goal-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.goal-amounts {
  display: flex;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.goal-current,
.goal-target {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.goal-current .label,
.goal-target .label {
  font-size: 24rpx;
  color: #999;
}

.goal-current .value {
  font-size: 36rpx;
  font-weight: bold;
  color: #667eea;
}

.goal-target .value {
  font-size: 32rpx;
  font-weight: 600;
  color: #666;
}

.goal-progress-bar {
  width: 100%;
  height: 16rpx;
  background: #f3f4f6;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 12rpx;
}

.goal-progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #10B981 0%, #059669 100%);
  border-radius: 8rpx;
  transition: width 0.3s;
}

.goal-progress-text {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

/* 新增：快捷操作区样式 */
.quick-actions {
  margin-top: 60rpx;
  animation: slideUp 0.5s ease-out 0.5s backwards;
}

.action-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 24rpx;
  margin-top: 30rpx;
}

.action-item {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s;
}

.action-item:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.action-icon {
  font-size: 48rpx;
}

.action-text {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
  text-align: center;
}
