/* pages/goal/goal.wxss */
.container {
  min-height: 100vh;
  padding: 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
  animation: fadeIn 0.6s ease-out;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.form-section {
  background: white;
  border-radius: 28rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
  animation: slideUp 0.6s ease-out;
}

.input-group {
  margin-bottom: 40rpx;
}

.input-group:last-child {
  margin-bottom: 0;
}

.label {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

.icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.input {
  width: 100%;
  padding: 24rpx;
  font-size: 32rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  background: #f9fafb;
  transition: all 0.3s;
}

.input:focus {
  border-color: #667eea;
  background: white;
}

.amount-input {
  font-size: 40rpx;
  font-weight: 600;
  color: #667eea;
  text-align: right;
}

.preview-section {
  animation: slideUp 0.6s ease-out 0.2s backwards;
}

.preview-title {
  font-size: 28rpx;
  color: white;
  margin-bottom: 30rpx;
  text-align: center;
  opacity: 0.9;
}

.category-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.08);
  border-left: 8rpx solid;
}

.category-card.growth {
  border-left-color: #10B981;
}

.category-card.stability {
  border-left-color: #3B82F6;
}

.category-card.essentials {
  border-left-color: #F59E0B;
}

.category-card.rewards {
  border-left-color: #F9A8D4;
}

.category-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.category-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.category-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  flex: 1;
}

.category-percentage {
  font-size: 28rpx;
  color: #999;
  font-weight: 500;
}

.category-amount {
  font-size: 42rpx;
  font-weight: bold;
  color: #667eea;
  text-align: right;
}

.button-wrapper {
  margin-top: 60rpx;
  animation: slideUp 0.6s ease-out 0.4s backwards;
}

.save-button {
  width: 100%;
  padding: 32rpx;
  background: linear-gradient(135deg, #10B981 0%, #059669 100%);
  color: white;
  font-size: 36rpx;
  font-weight: bold;
  border-radius: 28rpx;
  box-shadow: 0 20rpx 40rpx rgba(16, 185, 129, 0.3);
  border: none;
}

.save-button:active {
  opacity: 0.9;
  transform: scale(0.98);
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
